{
  "type": "commonjs",
  "name": "ejercicio-3",
  "version": "1.3.1",
  "description": "POST and GET a user to the swagger example API.",
  "main": "./src/index.ts",
  "scripts": {
    "start": "npx tsc && npx tsc-alias && node ./dist/src/index.js",
    "test": "jest"
  },
  "keywords": [],
  "author": "Jose Adrian Lopez Nu√±ez",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "axios": "^1.6.8",
    "http-status-codes": "^2.3.0",
    "pino": "^8.20.0",
    "tsc-alias": "^1.8.8"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "node_modules",
      "dist",
      "tests"
    ],
    "moduleNameMapper": {
      "^@services/(.*)$": "<rootDir>/src/services/$1",
      "^@controllers/(.*)$": "<rootDir>/src/controllers/$1",
      "^@fixtures/(.*)$": "<rootDir>/src/fixtures/$1",
      "^@interfaces/(.*)$": "<rootDir>/src/interfaces/$1",
      "^@views/(.*)$": "<rootDir>/src/views/$1"
    }
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test"
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ]
}
